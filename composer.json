{
  "name": "dt/home",
  "description": "An app home screen for disciple.tools. Part of the DT Toolbox.",
  "type": "project",
  "license": "GNU",
  "autoload": {
    "psr-4": {
      "DT\\Home\\": "src/"
    },
    "files": [
      "src/helpers.php",
      "src/globals.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    },
    "files": [
      "tests/factories.php"
    ]
  },
  "authors": [
    {
      "name": "Craig Wann",
      "email": "craig@codezone.io"
    }
  ],
  "scripts": {
    "pre-install-cmd": [
      "bin/setup-scoper.sh"
    ]
  },
  "require": {
    "php": "7.4.27",
    "ext-json": "*",
    "ext-zip": "*",
    "composer-plugin-api": "^1.0 || ^2.0",
    "open-telemetry/api": "*",
    "open-telemetry/sem-conv": "*",
    "open-telemetry/sdk": "*",
    "open-telemetry/exporter-otlp": "*",
    "symfony/http-client": "*",
    "nyholm/psr7": "*",
    "php-http/guzzle7-adapter": "*",
    "vlucas/phpdotenv": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "php-parallel-lint/php-parallel-lint": "^1.3.1",
    "phpcompatibility/php-compatibility": "^9.0",
    "yoast/phpunit-polyfills": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "fakerphp/faker": "*",
    "phpunit/phpunit": "^9",
    "filp/whoops": "^2.15"
  },
  "extra": {
    "composer-runtime-api": {
      "platform_check": false
    },
    "wpify-scoper": {
      "prefix": "DT\\Home",
      "folder": "vendor-scoped",
      "globals": [
        "wordpress"
      ],
      "composerjson": "composer.scoped.json",
      "composerlock": "composer.scoped.lock",
      "autorun": true
    }
  },
  "config": {
    "autoloader-suffix": "dt_home",
    "platform": {
      "php": "7.4.27"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "bamarni/composer-bin-plugin": true,
      "wpify/scoper": true,
      "php-http/discovery": true
    }
  }
}
